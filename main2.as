package {	import flash.display.*;	import flash.events.*;	import flash.text.TextField;	import flash.ui.Keyboard;	import flash.events.KeyboardEvent;	public class main2 extends MovieClip	{		public function main2()		{			stage.addEventListener(KeyboardEvent.KEY_DOWN, keyDownHandler);			input.text = "";			output.text = "enter play to start";			checkIf();		}		public function keyDownHandler(event : KeyboardEvent):void		{			if (event.keyCode == Keyboard.ENTER)			{				checkIf();				clearInput();				level1.gotoAndStop(nameMap[roomValue1][roomValue2]);			}		}		public function checkIf():void		{			var inputWords:Array = new Array  ;			inputWords = input.text.split(" ");			trace(inputWords);			if (gameStart == true)			{				switch (input.text)				{					case "attack":					break;				}			}			if (gameStart == false)			{				switch (input.text)				{					case "play" :						roomValue1 = 3;						roomValue2 = 1;						output.text = "you're in battle"						gameStart = true;						break;					default :						output.text = "you did not enter play";				}			}			for (var i:Number=0; i<=10; i++)			{				switch (input.text)				{					case "trace "+ nameMap[3][i] :						trace(nameMap[3][i]);						output.text = inputWords[0];				}			}		}		public function clearInput():void		{			input.text = "";		}	}}